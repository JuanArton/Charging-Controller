<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvChargingCurrentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/battery_history"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_chart_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:gravity="center"
        android:hint="@string/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvChargingCurrentTitle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:hint="@string/current"
        android:text="@string/min"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_chart_min"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_chart_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/text"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/chargingCurrentChart"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:hint="@string/current"
        android:text="@string/max"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_chart_max"
        app:layout_constraintEnd_toEndOf="@+id/tv_chart_value"/>

    <TextView
        android:id="@+id/tv_chart_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/text"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/chargingCurrentChart"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chargingCurrentChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_chart_value"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cgGraphSelector"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chargingCurrentChart"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipChargingCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:chipBackgroundColor="@drawable/bg_chip_state_list"
            app:chipStrokeColor="?attr/colorPrimary"
            app:chipCornerRadius="20dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temp"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:chipBackgroundColor="@drawable/bg_chip_state_list"
            app:chipStrokeColor="?attr/colorPrimary"
            app:chipCornerRadius="20dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/power"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:chipBackgroundColor="@drawable/bg_chip_state_list"
            app:chipStrokeColor="?attr/colorPrimary"
            app:chipCornerRadius="20dp" />
    </com.google.android.material.chip.ChipGroup>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btFullHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:src="@drawable/double_arrow"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cgGraphSelector" />

    <TextView
        android:id="@+id/tvFullHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/see_full_battery_history"
        android:textColor="?attr/colorPrimary"
        android:textStyle="italic|bold"
        android:textSize="15sp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/btFullHistory"
        app:layout_constraintEnd_toStartOf="@+id/btFullHistory"
        app:layout_constraintTop_toTopOf="@+id/btFullHistory"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>