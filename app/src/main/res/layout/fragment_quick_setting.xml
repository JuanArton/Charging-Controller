<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ui.fragments.quicksetting.QuickSettingFragment">

    <TextView
        android:id="@+id/tvQuickSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quick_setting"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvChargingSwitch"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/cardBackgroundColor"
        app:contentPadding="20dp"
        app:contentPaddingTop="5dp"
        app:contentPaddingBottom="5dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvQuickSetting">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvChargingSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:text="@string/idle_mode"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCSDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/chargingSwitch"
                android:layout_toEndOf="@+id/tvChargingSwitch"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity = "center_vertical|start"
                android:text="@string/trigerred_by_charging_limit"
                android:textStyle="italic"
                android:visibility="invisible"
                android:textSize="11sp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/chargingSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvCurrentSlider"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/cardBackgroundColor"
        app:contentPadding="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/cvChargingSwitch">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charging_current"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvMAH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/sliderChargingCurrent"
                android:layout_alignParentEnd="true"
                android:text="@string/ma" />

            <TextView
                android:id="@+id/tvCurrentValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/sliderChargingCurrent"
                android:layout_toStartOf="@+id/tvMAH"
                android:layout_marginEnd="5dp"
                android:text="@string/current_value"
                android:textSize="14sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderChargingCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:valueFrom="500"
                android:valueTo="6000"
                android:stepSize="500"
                app:trackHeight="5dp"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvChargingLimit"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/cardBackgroundColor"
        app:contentPadding="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/cvCurrentSlider">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvChargingLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/chargingLimitSwitch"
                android:text="@string/charging_limit"
                android:textSize="18sp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/chargingLimitSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/tvPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/sliderChargingLimit"
                android:layout_alignParentEnd="true"
                android:text="%" />

            <TextView
                android:id="@+id/tvMaxCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/sliderChargingLimit"
                android:layout_toStartOf="@+id/tvPercent"
                android:layout_marginEnd="2dp"
                android:text="@string/maxCapacityValue"
                android:textSize="14sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderChargingLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:valueFrom="50"
                android:valueTo="100"
                android:stepSize="1"
                app:trackHeight="5dp"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>