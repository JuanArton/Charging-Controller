<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:clipToPadding="false">
        <TextView
            android:id="@+id/tvQuickSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard"
            android:layout_marginTop="30dp"
            android:textSize="27sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arcBatteryPercentage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            app:arc_suffix_text_size="15sp"
            app:arc_suffix_text_padding="15dp"
            app:arc_text_color="?attr/colorPrimary"
            app:arc_text_size="55sp"
            app:arc_stroke_width="7dp"
            app:arc_finished_color="?attr/colorPrimary"
            app:arc_progress="55"
            app:arc_unfinished_color="?attr/colorSurfaceContainerHigh"
            app:arc_bottom_text_size="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuickSetting" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arcBatteryPercentage">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:outlineProvider="none"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardCornerRadius="25dp"
                app:contentPadding="15dp"
                app:layout_constraintTop_toBottomOf="@id/cvChargingSwitch"
                app:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-35dp"
                        android:rotation="-90"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:scaleType="center"
                        android:src="@drawable/battery_profile"
                        android:background="@drawable/image"
                        android:backgroundTint="#70F90D1B"
                        android:contentDescription="@string/charging_status_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="@string/status" />

                    <TextView
                        android:id="@+id/tvBatteryStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:lines="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="@string/status"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:outlineProvider="none"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardCornerRadius="25dp"
                app:contentPadding="15dp"
                app:layout_constraintTop_toBottomOf="@id/cvChargingSwitch"
                app:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-35dp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:scaleType="center"
                        android:src="@drawable/charging_type"
                        android:background="@drawable/image"
                        android:backgroundTint="#7000CF35"
                        android:contentDescription="@string/charging_type_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="@string/type" />

                    <TextView
                        android:id="@+id/tvChargingType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:hint="@string/type"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:outlineProvider="none"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardCornerRadius="25dp"
                app:contentPadding="15dp"
                app:layout_constraintTop_toBottomOf="@id/cvChargingSwitch"
                app:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-35dp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:scaleType="center"
                        android:src="@drawable/bolt"
                        android:background="@drawable/image"
                        android:backgroundTint="#70EC00FC"
                        android:contentDescription="@string/charging_voltage_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="@string/voltage" />

                    <TextView
                        android:id="@+id/tvBatteryVoltage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/tvBatteryVoltage"
                        android:gravity="center_vertical"
                        android:layout_marginStart="2dp"
                        android:text="@string/volt_unit"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:outlineProvider="none"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardCornerRadius="25dp"
                app:contentPadding="15dp"
                app:layout_constraintTop_toBottomOf="@id/cvChargingSwitch"
                app:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <ImageView
                        android:id="@+id/ivChartInfo1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-35dp"
                        android:scaleType="center"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:src="@drawable/temperature"
                        android:background="@drawable/image"
                        android:backgroundTint="@color/temperatureBackground"
                        android:contentDescription="@string/charging_temperature_icon" />

                    <TextView
                        android:id="@+id/tvChartInfoTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="@string/temperature" />

                    <TextView
                        android:id="@+id/tvChartInfoValue1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:outlineProvider="none"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardCornerRadius="25dp"
                app:contentPadding="15dp"
                app:layout_constraintTop_toBottomOf="@id/cvChargingSwitch"
                app:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <ImageView
                        android:id="@+id/ivChartInfo2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-35dp"
                        android:scaleType="center"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:src="@drawable/power"
                        android:background="@drawable/image"
                        android:backgroundTint="@color/powerBackground"
                        android:contentDescription="@string/battery_power_icon" />

                    <TextView
                        android:id="@+id/tvChartInfoTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="@string/power" />

                    <TextView
                        android:id="@+id/tvChartInfoValue2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <TextView
            android:id="@+id/tvChargingCurrentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/charging_current"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout2" />

        <TextView
            android:id="@+id/tv_chart_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:gravity="center"
            android:hint="@string/text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvChargingCurrentTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="@string/current"
            android:text="@string/min"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_chart_min"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_chart_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/text"
            android:textColor="?attr/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/chargingCurrentChart"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="@string/current"
            android:text="@string/max"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_chart_max"
            app:layout_constraintEnd_toEndOf="@+id/tv_chart_value"/>

        <TextView
            android:id="@+id/tv_chart_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/text"
            android:textColor="?attr/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/chargingCurrentChart"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chargingCurrentChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_chart_value"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cgGraphSelector"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chargingCurrentChart"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipChargingCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                app:chipBackgroundColor="@drawable/bg_chip_state_list"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipCornerRadius="20dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temp"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                app:chipBackgroundColor="@drawable/bg_chip_state_list"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipCornerRadius="20dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/power"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                app:chipBackgroundColor="@drawable/bg_chip_state_list"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipCornerRadius="20dp" />

        </com.google.android.material.chip.ChipGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>